@model IQueryable<IdentityRole>
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Roles";
}
<div class="card">
    <div class="card-header">
        All Roles
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table  table-borderless">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Id</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Id</td>
                            <td>
                                <form asp-action="Delete" asp-controller="Roles" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-link">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Role</th>
                        <th>Id</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
